@using static FiveInARowWeb.About;
@{}
<head>
    <title>五子棋网页版</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/StartPage_Index.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/index.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="mainDiv">
    <p>欢迎来到五子棋网页版:D</p>
        <label for="passcode">请输入许可代码:</label>
        <input type="password" id="passcode" />
         <br/>
         <label for="teamSel">选择棋子阵营: </label>
        <select id="teamSel">
                <option value="white">白方</option>
                <option value="black">黑方</option>
        </select>
        <button onclick="StartGameClick()">开始游戏</button>
        <p id="errorOutput"></p>
    </div>
    <div class="aboutDiv">
        <p>@version_addV</p>
        <p>@copyright</p>
        <a href="@githubUrl">@githubUrl_addHead</a>
    </div>
</body>
